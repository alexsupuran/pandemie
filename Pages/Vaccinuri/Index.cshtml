@page
@model pandemie.Pages.Vaccinuri.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vaccin[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaccin[0].Pret_achizitie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaccin[0].Data_aprobare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaccin[0].VaccinTipuri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaccin[0].Informatii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VaccinD.Vaccinuri)
        {
            string selectedRow = "";
            if (item.ID == Model.VaccinID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret_achizitie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_aprobare)
            </td>
                <td>
                    @{
                        foreach (var category in item.VaccinTipuri)
                        {
                            @category.Tip.ID @: @category.Tip.Nume_tip <br />
                        }
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Informatii)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
