@page
@model pandemie.Pages.Producatori.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Gaseste Producator / Vaccin:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Inapoi la lista completa</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ProducatorSort">
                    @Html.DisplayNameFor(model => model.Producator[0].Nume)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.VaccinSort">
                    @Html.DisplayNameFor(model => model.Producator[0].Vaccin.Nume)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producator[0].Tara.Name)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Producator) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vaccin.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tara.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

